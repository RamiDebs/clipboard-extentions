{
  "manifest_version": 3,
  "name": "ClipSnap: Your Clipboardâ€™s Best Friend",
  "version": "1.0",
  "description": "Save and manage clipboard content",
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}